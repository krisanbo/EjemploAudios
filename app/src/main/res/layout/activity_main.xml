<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="214dp"
        android:layout_height="154dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/portada1"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="398dp"
        android:layout_height="79dp"
        android:layout_marginTop="244dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bt_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/reproducir"
            android:contentDescription="@string/app_name"
            android:onClick="PlayPause" />

        <Button
            android:id="@+id/bt_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/detener"
            android:contentDescription="@string/app_name"
            android:onClick="Stop" />

        <Button
            android:id="@+id/bt_repetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/repetir"
            android:contentDescription="@string/app_name"
            android:onClick="Repetir" />

        <Button
            android:id="@+id/bt_siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/siguiente"
            android:contentDescription="@string/app_name"
            android:onClick="siguiente" />

        <Button
            android:id="@+id/bt_anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/anterior"
            android:contentDescription="@string/app_name"
            android:onClick="Anterior" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="152dp"
        android:layout_height="147dp"
        android:layout_marginTop="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <Button
        android:id="@+id/bt_grabar"
        android:layout_width="80dp"
        android:layout_height="58dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/rec"
        android:contentDescription="@string/app_name"
        android:onClick="Recorder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_reproducir"
        android:layout_width="85dp"
        android:layout_height="59dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/reproducir"
        android:contentDescription="@string/app_name"
        android:onClick="Reproducir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>